<div class="row-fluid">
  <div class="span12 div-center text-center width-restrained">
    <% if @draft %>
    <h1>Draft</h1>
    <br />
    <div class='line-break'></div>
    <h3>Round: <%= @draft.round %></h3>
    <h3>Pick: <%= @draft.pick %></h3>
    <h3>Team: <%= @draft.team.name %></h3>
    <br />
    <br />
    <h3>Undrafted Players</h3>
    <div class='filter-position'>
      <span class='label label-primary filter-label'>Filter</span>
      <select class='select-list' id='position-list'>
        <option value='all'>All</option>
        <% @positions.each do |position| %>
          <option value=<%= position.position%>><%= position.position %></option>
        <% end %>
      </select>
    </div>
    <br />

    <!-- undrafted partial -->
    <div id='undrafted-players'>
      <%= render 'shared/undrafted_players', undrafted_players: @undrafted_players %>
    </div>

    <br />
    <% else %>
      <h1>The Draft is Over!</h1>
    <% end %>
  </div>
</div>
